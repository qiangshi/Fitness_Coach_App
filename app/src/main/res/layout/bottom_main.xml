<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/rl_self"
        android:layout_width="0dp"
        android:layout_height="@dimen/padding_49"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_self"
            android:layout_width="@dimen/padding_40"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/padding_8"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_self"
                android:layout_width="@dimen/padding_20"
                android:layout_height="@dimen/padding_20"
                android:src="@drawable/label_news_selection_iconxhdpi" />

            <TextView
                android:id="@+id/tv_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/self_select"
                android:textColor="@color/color_4C84FF"
                android:textSize="@dimen/text_font_10" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_red_top_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ll_self"
            android:layout_marginTop="4dp"
            android:src="@drawable/label_dot_iconxhdpi"
            android:visibility="gone" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_macroscopic"
        android:layout_width="0dp"
        android:layout_height="@dimen/padding_49"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_macroscopic"
            android:layout_width="@dimen/padding_40"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/padding_8"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_macroscopic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/label_news_unselection_iconxhdpi" />

            <TextView
                android:id="@+id/tv_macroscopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/macroscopic"
                android:textColor="@color/color_8D92A3"
                android:textSize="@dimen/text_font_10" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_red_top_macroscopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ll_macroscopic"
            android:layout_marginTop="4dp"
            android:src="@drawable/label_dot_iconxhdpi"
            android:visibility="gone" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_mine"
        android:layout_width="0dp"
        android:layout_height="@dimen/padding_49"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="@dimen/padding_40"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_8"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/label_me_unselection_iconxhdpi" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/mine"
                android:textColor="@color/color_8D92A3"
                android:textSize="@dimen/text_font_10" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_red_top_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ll_mine"
            android:layout_marginTop="0dp"
            android:src="@drawable/label_dot_iconxhdpi"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>