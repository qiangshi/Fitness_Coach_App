<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/padding_95"
    android:layout_height="@dimen/padding_95">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/padding_80"
        android:layout_height="@dimen/padding_80"
        android:layout_centerInParent="true"
        android:src="@drawable/tool_askleave_upload_icon_xhdpi" />

    <ImageView
        android:id="@+id/remove_iv"
        android:layout_width="@dimen/padding_16"
        android:layout_height="@dimen/padding_16"
        android:layout_marginBottom="-8dp"
        android:layout_marginStart="-8dp"
        android:layout_toEndOf="@+id/iv_photo"
        android:src="@drawable/ic_delete_input"
        android:visibility="visible" />

</RelativeLayout>